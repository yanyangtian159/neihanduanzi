<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >

    <!-- 形状内部的北京色，待透明度的灰色 -->
    <solid android:color="#99666666" />
	<!-- 形状外边的变宽的信息，下面代表边框1dp宽度，并且颜色是白色 -->
    <stroke
        android:width="1dp"
        android:color="#F00" />
	<!-- 制定内容与边框之间的间距 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

</shape>